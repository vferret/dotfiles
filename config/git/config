	enabled = 1
	autoupdate = 1
[push]
	default = matching
[color]
	ui = auto
	interactive = auto
[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[github]
	user = vferret
	token = token
[gitflow "prefix"]
	feature = feature-
	release = release-
	hotfix = hotfix-
	support = support-
	versiontag = v
[alias]
	c =commit
	ca = commit --amend
	co = checkout
	m = merge
	mff = merge --ff-only
	r = rebase
	ri = rebase -i
	rc = rebase --continue
	bunch = log --oneline --graph --decorate --all
	to-origin = reset --hard HEAD@{upstream}
	to-head = reset --hard HEAD
	to-parent = reset --hard HEAD^
